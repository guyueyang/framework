<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/style_title"
        android:text="@string/about_me"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.andcup.widget.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_about_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_slider_about_me"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="@string/about_more"
                android:textSize="@dimen/px35" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1.0.0"
                android:textSize="@dimen/px35" />

            <TextView
                style="@style/style_setting.about"
                android:layout_marginTop="10dp"
                android:text="@string/about_introduce" />

            <TextView
                style="@style/style_setting.about"
                android:text="@string/about_introduction" />

            <TextView
                style="@style/style_setting.about"
                android:autoLink="all"
                android:text="@string/about_website" />

            <TextView
                style="@style/style_setting.about"
                android:text="@string/about_wechat" />

            <TextView
                style="@style/style_setting.about"
                android:text="@string/about_weibo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_token"
                android:background="@null"
                android:visibility="gone"
                />

        </com.andcup.widget.AutoLinearLayout>
    </ScrollView>
</com.andcup.widget.AutoLinearLayout>