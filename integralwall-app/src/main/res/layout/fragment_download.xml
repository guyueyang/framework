<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pb_task"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/layer_task_download"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btn_download"
        android:background="@null"
        android:text="@string/task_download_start"
        android:textColor="@color/colorWhite"
        android:textSize="30px"
        />

    <com.andcup.android.integralwall.commons.loading.LoadingIndicatorView
        android:id="@+id/liv_loading"
        android:layout_width="70px"
        android:layout_height="70px"
        app:indicator="BallClipRotatePulse"
        app:indicator_color="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px20"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</com.andcup.widget.AutoRelativeLayout>