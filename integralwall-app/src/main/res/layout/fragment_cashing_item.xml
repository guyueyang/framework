<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.andcup.widget.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cash_banner" />

        <com.andcup.widget.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:background="@color/app_content_color">

            <TextView
                android:id="@+id/tv_score"
                style="@style/CashStyle.Score" />

        </com.andcup.widget.AutoRelativeLayout>

        <com.andcup.widget.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="28px">

            <com.andcup.widget.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cashing"
                android:orientation="horizontal"
                android:paddingBottom="28px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="28px">

                <View
                    android:layout_width="8px"
                    android:layout_height="34px"
                    android:background="@color/red_f46449" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:text="@string/check_cashing_value"
                    android:textColor="@color/black_383838"
                    android:id="@+id/tv_title"
                    android:textSize="30px" />

            </com.andcup.widget.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cashing_item"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="-0.5dp"
                android:background="@drawable/shape_cashing"
                android:scrollbars="horizontal"
                android:layout_gravity="center_horizontal"
                />

        </com.andcup.widget.AutoLinearLayout>

        <FrameLayout
            android:id="@+id/fr_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-0.5dp"
            android:paddingBottom="28px" />
    </com.andcup.widget.AutoLinearLayout>
</ScrollView>