<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content_color"
    android:orientation="vertical">

    <com.andcup.widget.AutoFrameLayout
        android:id="@+id/fr_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title_bar"
        android:background="@color/colorActionBar2" />

    <com.andcup.widget.AutoRelativeLayout
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_common_item">

        <com.andcup.android.integralwall.commons.widget.URIRoundedImageView
            android:id="@+id/riv_avatar"
            android:layout_width="112px"
            android:layout_height="112px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px26"
            android:layout_marginTop="24px"
            android:src="@drawable/ic_default_task"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dp" />

        <com.andcup.widget.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42px"
            android:layout_toLeftOf="@+id/iv_more"
            android:layout_toRightOf="@+id/riv_avatar"
            android:orientation="vertical">

            <com.andcup.widget.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_4c4b4b"
                    android:textSize="@dimen/px30" />

                <ImageView
                    android:id="@+id/sdv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20"
                    android:background="@null"
                    android:padding="@dimen/px20"
                    android:src="@drawable/vip_level_image" />
            </com.andcup.widget.AutoLinearLayout>

            <com.andcup.widget.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/style_setting.phone_invite_code"
                    android:hint="@string/phone_number_none" />


            </com.andcup.widget.AutoLinearLayout>
        </com.andcup.widget.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:src="@drawable/ic_more" />

    </com.andcup.widget.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_mi_task"
        style="@style/style_setting.text"
        android:layout_marginTop="@dimen/px20"
        android:drawableLeft="@drawable/ic_mine_task"
        android:drawableRight="@drawable/ic_more"
        android:text="@string/mi_task" />

    <include layout="@layout/include_divider" />

    <TextView
        android:id="@+id/tv_score_in_detail"
        style="@style/style_setting.text"
        android:drawableLeft="@drawable/ic_mine_details"
        android:drawableRight="@drawable/ic_more"
        android:text="@string/score_in_detail" />

    <include layout="@layout/include_divider" />

    <TextView
        android:id="@+id/tv_score_invite_code"
        style="@style/style_setting.text"
        android:drawableLeft="@drawable/ic_mine_invite"
        android:drawableRight="@drawable/ic_more"
        android:text="@string/invite_code" />

    <include layout="@layout/include_divider" />

    <TextView
        android:id="@+id/tv_score_setting"
        style="@style/style_setting.text"
        android:drawableLeft="@drawable/ic_mine_set"
        android:drawableRight="@drawable/ic_more"
        android:text="@string/score_setting" />

    <include layout="@layout/include_divider" />

    <TextView
        android:id="@+id/tv_call_service"
        style="@style/style_setting.text"
        android:drawableLeft="@drawable/ic_qq_service"
        android:drawableRight="@drawable/ic_more"
        android:text="@string/score_call_service" />
    <include layout="@layout/include_divider" />

</com.andcup.widget.AutoLinearLayout>