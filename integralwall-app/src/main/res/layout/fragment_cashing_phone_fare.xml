<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingBottom="28px"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <include layout="@layout/include_phone_number"/>
    </FrameLayout>

    <Button
        style="@style/TextStyle.Home.Cashing.Action"
        android:background="@drawable/selector_common_black"
        android:text="@string/telephone_fare"
        android:id="@+id/btn_action"
        android:enabled="false"
        />

    <include layout="@layout/include_cashing_info_title"
        android:layout_marginLeft="40px"
        android:layout_marginTop="32px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TextView
        style="@style/TextStyle.Home.Cashing.Info"
        android:text="@string/phone_fare_information"
        />

</com.andcup.widget.AutoLinearLayout>