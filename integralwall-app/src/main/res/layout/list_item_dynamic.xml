<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px80"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="@dimen/px140"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_content_color"
        android:textSize="@dimen/px24"
        android:text="昵称"
        android:paddingLeft="@dimen/px18"
        android:paddingTop="@dimen/px13"
        android:paddingBottom="@dimen/px13"
        android:singleLine="true"
        android:id="@+id/tv_nick_name"
    />

    <TextView
        android:layout_width="@dimen/px140"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_content_color"
        android:textSize="@dimen/px24"
        android:text="时间"
        android:paddingTop="@dimen/px13"
        android:paddingBottom="@dimen/px13"
        android:singleLine="true"
        android:id="@+id/tv_date"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_text_content_color"
        android:textSize="@dimen/px24"
        android:text="做了XXX任务获得了多少积分"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/px26"
        android:id="@+id/tv_content"
        />

</com.andcup.widget.AutoLinearLayout>