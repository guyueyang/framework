<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fist_landing_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.andcup.widget.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.andcup.widget.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="288px"
                android:background="@drawable/bg_first_landing_task_banner"
                >
            </com.andcup.widget.AutoRelativeLayout>
            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </com.andcup.widget.AutoLinearLayout>
    </ScrollView>
</com.andcup.widget.AutoLinearLayout>