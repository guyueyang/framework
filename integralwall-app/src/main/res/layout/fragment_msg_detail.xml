<?xml version="1.0" encoding="utf-8"?>
<com.andcup.widget.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_common_padding"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_msg_reading"
        android:padding="@dimen/app_common_padding"
        android:id="@+id/tv_title"
        android:textColor="@color/black_292931"
        android:textSize="@dimen/px30"
        android:singleLine="true"
        android:drawablePadding="10dp"
        />

    <View style="@style/style_divider.h"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.andcup.widget.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.andcup.android.integralwall.commons.htmltextview.HtmlTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_common_padding"
                android:id="@+id/tv_content"
                android:textSize="@dimen/px26"
                android:textColor="@color/app_text_color"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:textSize="@dimen/px26"
                android:textColor="@color/app_text_color"
                android:padding="@dimen/app_common_padding"
                android:layout_marginTop="@dimen/px45"
                android:gravity="right"
                android:singleLine="true"
                />
        </com.andcup.widget.AutoLinearLayout>
    </ScrollView>

</com.andcup.widget.AutoLinearLayout>