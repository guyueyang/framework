<?xml version="1.0" encoding="utf-8"?>

<com.andcup.widget.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/px15"
    android:background="@drawable/selector_common_item"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="82px"
        android:layout_height="82px"
        android:src="@drawable/ic_wait_finish"
        android:layout_gravity="center_vertical"
        android:id="@+id/riv_avatar"
        android:layout_centerVertical="true"
        />

    <TextView
        style="@style/TextStyle.Home.Item.Wait"
        android:text="@string/wait_finish_task"
        android:layout_toRightOf="@+id/riv_avatar"
        />

    <TextView
        style="@style/TextStyle.Home.Item.Wait.Score"
        android:layout_alignParentRight="true"
        android:text="30"
        android:id="@+id/tv_wait_finish"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_more"
        />

</com.andcup.widget.AutoRelativeLayout>