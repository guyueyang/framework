<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_mine">

    </style>

    <style name="style_mine.exchange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/app_text_content_color</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="style_mine.exchange.small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="style_mine.edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/px90</item>
        <item name="android:textColor">@color/black_666</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:paddingLeft">@dimen/px20</item>
        <item name="android:paddingTop">@dimen/px28</item>
        <item name="android:paddingBottom">@dimen/px28</item>
        <item name="android:paddingRight">@dimen/px3</item>
        <item name="android:drawablePadding">@dimen/px3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_mine.nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/px90</item>
        <item name="android:textColor">@color/black_666</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:paddingLeft">@dimen/px3</item>
        <item name="android:paddingTop">@dimen/px28</item>
        <item name="android:paddingBottom">@dimen/px28</item>
        <item name="android:paddingRight">@dimen/px3</item>
        <item name="android:drawablePadding">@dimen/px3</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/px140</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="style_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/px10</item>
        <item name="android:paddingBottom">@dimen/px10</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/px30</item>
    </style>

    <style name="style_item_edit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/selector_common_item</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="style_item_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/app_text_content_color</item>
        <item name="android:background">@drawable/selector_common_item</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:paddingTop">@dimen/px20</item>
        <item name="android:paddingBottom">@dimen/px20</item>
        <item name="android:drawablePadding">@dimen/px20</item>
    </style>

    <style name="style_mine.member">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/app_text_content_color</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="style_mine.member.vip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:text">@string/member_vip_level</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:textColor">@color/app_text_content_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_mine.member.vip.level" parent="style_mine.member.vip">
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:paddingBottom">@dimen/px10</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_mine.exp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_text_content_color</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/px3</item>
        <item name="android:paddingBottom">@dimen/px3</item>
    </style>

    <style name="style_invite_code_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">@dimen/px24</item>
    </style>

    <style name="style_reward_rules">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/px26</item>
        <item name="android:layout_marginLeft">@dimen/px45</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">@dimen/px26</item>
    </style>

</resources>