<?xml version="1.0" encoding="utf-8"?>

<com.andcup.widget.AutoRelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="90px"
    android:orientation="horizontal">

    <EditText
            style="@style/style_edit_base"
            android:hint="@string/login_hint_input_verify"
            android:id="@+id/et_verify_code"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_verify_code"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:maxLength="6"
            />

    <Button
            android:id="@+id/btn_verify_code"
            android:text="@string/login_to_obtain"
            style="@style/style_user_login.verify.code"
            android:layout_width="240px"
            android:layout_alignParentRight="true"
            android:layout_height="64px"
            android:textSize="28px"
            android:layout_marginTop="18px"
            android:textColor="@color/red_ff6836"
        />

</com.andcup.widget.AutoRelativeLayout>
